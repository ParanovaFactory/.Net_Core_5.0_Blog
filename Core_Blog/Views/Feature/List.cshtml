@using EntityLayer.Concrete
@model List<Feature>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-body">
    <div class="card-header border-0">
        <h3 class="mb-0">About Us</h3>
    </div>
    @foreach (var item in Model)
    {
        <div class="pl-lg-4">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-control-label" for="input-username">Header</label>
                        <input type="text" id="input-username" class="form-control" value="@item.FeatureHeader" disabled>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-control-label" for="input-email">Name</label>
                        <input type="text" class="form-control" value="@item.FeatureName" disabled>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="form-control-label" for="input-username">Title</label>
                        <input type="text" id="input-username" class="form-control" value="@item.FeatureTitle" disabled>
                    </div>
                </div>
            </div>
        </div>
        <a href="/Feature/Edit/@item.FeatureId" class="btn btn-primary">Edit Feature</a>
    }
</div>