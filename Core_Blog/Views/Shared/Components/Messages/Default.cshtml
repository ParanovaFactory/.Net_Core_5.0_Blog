@using EntityLayer.Concrete
@model List<UserMessage>
<div class="col-md-6 col-xl-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h4 class="card-title">Messages</h4>
            </div>
            @foreach (var item in Model)
            {

                <div class="preview-item border-bottom">
                    <div class="preview-thumbnail">
                        <img src="@item.User.ImageUrl" alt="image" class="rounded-circle" style="height:30px; width:40px"/>
                    </div>
                    <div class="preview-item-content d-flex flex-grow">
                        <div class="flex-grow">
                            <div class="d-flex d-md-block d-xl-flex justify-content-between">
                                <h6 class="preview-subject">@item.User.Name</h6>
                                <p class="text-muted text-small">@item.MessageDate</p>
                            </div>
                            <p class="text-muted">@item.MessageTitle</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>