@using EntityLayer.Concrete
@model List<Experience>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Experience Table</h3>
</div>
<!--Table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Title</th>
                <th scope="col" class="sort" data-sort="status">Date</th>
                <th scope="col">Delete</th>
                <th scope="col" class="sort" data-sort="completion">Edit</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ExperienceId</td>
                    <td class="budget">@item.ExperienceTitle</td>
                    <td>@item.ExperienceDate</td>
                    <td><a href="/Experience/Delete/@item.ExperienceId" class="btn btn-danger">Delete</a></td>
                    <td><a href="/Experience/Edit/@item.ExperienceId" class="btn btn-warning">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Experience/Add/" class="btn btn-primary">Add New Experience</a>
</div>